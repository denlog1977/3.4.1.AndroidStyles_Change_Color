<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>

    </style>

    <style name="Black" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlack</item>
        <item name="colorButtonNormal">@color/colorBackgroundButtonBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:colorBackground">@color/colorBackgroundBlack</item>
    </style>

    <style name="Green" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlack</item>
        <item name="colorButtonNormal">@color/colorBackgroundButtonGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="android:textColor">@color/colorTextGreen</item>
        <item name="android:colorBackground">@color/colorBackgroundGreen</item>
    </style>

    <style name="Blue" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorButtonNormal">@color/colorBackgroundButtonBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:textColor">@color/colorTextBlue</item>
        <item name="android:colorBackground">@color/colorBackgroundBlue</item>
    </style>

</resources>
